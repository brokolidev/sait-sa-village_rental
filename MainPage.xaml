<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:VillageRentalsPrototype.Pages.Controls"
             x:Class="VillageRentalsPrototype.MainPage">

    <ScrollView>
        <HorizontalStackLayout>

            <controls:Nav x:Name="NavControl" />

            <VerticalStackLayout Padding="20" Spacing="20">

                <Label FontSize="Header">Village Rental</Label>

                <Label FontSize="Title" x:Name="WelcomMessageLabel"
                       Text="Welcome, Tommy"></Label>

                <Label FontSize="Body" Text="Here are some of the latest rentals in your area."></Label>
            </VerticalStackLayout>

        </HorizontalStackLayout>
    </ScrollView>
    
</ContentPage>
