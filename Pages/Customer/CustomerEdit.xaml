<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VillageRentalsPrototype.Pages.Customer.CustomerEdit"
             xmlns:controls="clr-namespace:VillageRentalsPrototype.Pages.Controls"
             Title="CustomerEdit">

    <ScrollView>
        <HorizontalStackLayout>

            <controls:Nav x:Name="NavControl" />

            <VerticalStackLayout Padding="20" Spacing="15">

                <Label FontSize="Header">Edit Customer</Label>

                <controls:CustomerForm x:Name="CustomerForm" 
                                    IsEdit="True"
                                    OnValidationErrorOccured="ValidationAlert"/>

            </VerticalStackLayout>

        </HorizontalStackLayout>
    </ScrollView>

</ContentPage>