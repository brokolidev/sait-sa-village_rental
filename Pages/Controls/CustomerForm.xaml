<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VillageRentalsPrototype.Pages.Controls.CustomerForm">
    <VerticalStackLayout Spacing="15">

        <Label Text="ID" x:Name="IdLabel" />
        <Entry x:Name="IdEntry" IsReadOnly="True" />

        <Label Text="First Name" />
        <Entry x:Name="FirstNameEntry" Placeholder="First Name" />

        <Label Text="Last Name" />
        <Entry x:Name="LastNameEntry" Placeholder="Last Name" />

        <Label Text="Phone" />
        <Entry x:Name="PhoneEntry" Placeholder="Phone Number" />

        <Label Text="Email" />
        <Entry x:Name="EmailEntry" Placeholder="Email" />

        <Button Text="Add" x:Name="AddButton" Clicked="SaveButton_Clicked" />
        <Button Text="Update" Clicked="EditButton_Clicked" x:Name="UpdateButton" />
        <Button Text="Cancel" Clicked="CancelButton_Clicked" Background="#344" />

    </VerticalStackLayout>
</ContentView>
