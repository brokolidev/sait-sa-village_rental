<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VillageRentalsPrototype.Pages.Controls.EquipmentForm">
    
    <VerticalStackLayout Spacing="15">

        <Picker Title="Category" x:Name="CategoryPicker">
        </Picker>

        <Label Text="Name" />
        <Entry x:Name="Name" Placeholder="Name" />

        <Label Text="Description" />
        <Entry x:Name="Description" Placeholder="Description" />

        <Label Text="Daily Rate" />
        <Entry x:Name="DailyRate" Placeholder="Daily Rate" />

        <Button Text="Add" x:Name="AddButton" Clicked="SaveButton_Clicked" />
        <Button Text="Update" Clicked="EditButton_Clicked" x:Name="UpdateButton" />
        <Button Text="Cancel" Clicked="CancelButton_Clicked" Background="#344" />

    </VerticalStackLayout>
</ContentView>
